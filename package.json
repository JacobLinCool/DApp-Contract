{
    "name": "dapp-contract",
    "version": "0.1.1",
    "description": "Smart contract ease of use.",
    "author": "JacobLinCool <jacoblincool@gmail.com> (https://github.com/JacobLinCool)",
    "license": "MIT",
    "keywords": [
        "ethers",
        "dapp",
        "smart contract"
    ],
    "main": "lib/index.js",
