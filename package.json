        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^27.4.7",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "tsup": "^5.11.11",
        "typedoc": "^0.22.11",
        "typescript": "^4.5.5"
